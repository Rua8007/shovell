<%= form_for @story, :html => { :class => "form-horizontal story" } do |f| %>

    <% if @story.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @story.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
    
 
  <% end %>
  

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control text-field',required:'true' %>
    </div>
  </div>
  <div class="control-group ">
    <%= f.label :link, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :link, :class => 'form-control text-field',required:'true' %>
    </div>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            stories_path, :class => 'btn btn-default' %>
            

<% end %>
